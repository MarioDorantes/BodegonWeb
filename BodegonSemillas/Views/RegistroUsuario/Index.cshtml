@model Cliente
@{
	ViewData["Title"] = "Crear Cuenta";
}

<!DOCTYPE html>
<html>
<head>
	<title>Crear cuenta</title>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <link href="~/css/crearcuenta.css" rel="stylesheet" />
</head>
<body>
	<div id="registro">
		<div class="container">
			<div id="registro-row" class="row justify-content-center align-items-center">
				<div id="registro-box" class="col-md-12">
					<form asp-controller="RegistroUsuario" asp-action="Index" method="post">
						
						<div id="registro-column" class="row justify-content-center align-items-center">
							<h3 class="text-center">Crear cuenta</h3>

							<div class="form-column">
								<div class="form-column">
									<label for="nombre" class="form-label">Nombre:</label>
									<input type="text" id="nombre" class="form-control">
								</div>
								<div class="form-column">
									<label for="ap_paterno" class="form-label">Apellido paterno:</label>
									<input type="text" id="ap_paterno" class="form-control">
								</div>
								<div class="form-column">
									<label for="ap_materno" class="form-label">Apellido materno:</label>
									<input type="text" id="ap_materno" class="form-control">
								</div>
								<div class="form-column">
									<label for="correo" class="form-label">Correo electrónico:</label>
									<input type="email" id="correo" class="form-control">
								</div>
							</div>
							<div class="form-column">
								<div class="form-column">
									<label for="contraseña" class="form-label">Contraseña:</label>
									<input type="password" id="contraseña" class="form-control">
								</div>
								<div class="form-column">
									<label for="confirmar_contraseña" class="form-label">Confirmar contraseña:</label>
									<input type="password" id="confirmar_contraseña" class="form-control">
								</div>
								<div class="form-column">
									<label for="telefono" class="form-label">Número de teléfono:</label>
									<input type="tel" id="telefono" class="form-control">
								</div>
								<div class="form-row">
									<label id="lbFactura" for="factura" class="form-label">¿Desea facturar?</label>
									<input type="checkbox" id="factura" class="checkbox">
								</div>
							</div>

							<button class="button">Siguiente</button>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</body>
</html>

